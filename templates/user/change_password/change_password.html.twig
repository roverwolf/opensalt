{% extends 'layout.html.twig' %}

{% form_theme form _self %}
{% block form_label_class %}
col-sm-4
{% endblock %}
{% block form_group_class %}
col-sm-8
{% endblock %}

{% block body %}
    <h1>Change Password</h1>

    <div class="container">
        <div class="row">
            <div class="col-xs-3">
            </div>
            <div class="col-xs-6">
                {{ form_start(form) }}
                {{ form_widget(form) }}
                <ul class="list-inline pull-right">
                    <li>
                        <input class="btn btn-primary" type="submit" value="Change Password" />
                    </li>
                    <li>
                        <a class="btn btn-default" href="{{ path('salt_index') }}">Cancel</a>
                    </li>
                </ul>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
